{
  "name": "@softonic/hapi-access-logger",
  "version": "2.1.0",
  "author": "Rub√©n Norte <ruben.norte@softonic.com>",
  "description": "Hapi plugin to log all requests and responses",
  "keywords": [
    "hapi",
    "plugin",
    "log",
    "request",
    "response",
    "http"
  ],
  "license": "Apache-2.0",
  "main": "index.js",
  "homepage": "https://github.com/softonic/hapi-access-logger",
  "files": [
    "es",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint es/**/*.js",
    "pretest": "npm run lint",
    "test": "jest --forceExit",
    "tdd": "jest --watch",
    "prebuild": "npm run test",
    "build": "rm -rf lib && babel es -d lib --source-maps",
    "prerelease": "npm run build",
    "release": "npm version -m \"New version: %s\"",
    "postrelease": "npm run push && npm publish",
    "push": "git push origin master && git push origin --tags"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "peerDependencies": {
    "hapi": "17.x.x"
  },
  "dependencies": {
    "@softonic/http-log-format": "^1.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "hapi": "^17.0.1",
    "jest": "^21.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softonic/hapi-access-logger.git"
  },
  "bugs": {
    "url": "https://github.com/softonic/hapi-access-logger/issues"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.9.0"
          }
        }
      ]
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.jsx?$"
  }
}
